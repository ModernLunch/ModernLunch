    <script>
        const texts = {
            de: {
                title: "Lunch Package ‚Äì √úbungsfirma",
                subtitle: "üéâ Bestellseite f√ºr den Tag der offenen T√ºr üéâ",
                formTitle: "Bestellung",
                labelName: "Name",
                namePlaceholder: "Dein Name",
                labelPackage: "Lunch Package w√§hlen",
                submitBtn: "Bestellen",
                packageOptions: ["Classic", "Vegetarisch", "Vegan"]
            },
            sl: {
                title: "Lunch Paket ‚Äì Vadbeni podjetje",
                subtitle: "üéâ Naroƒçilna stran za dan odprtih vrat üéâ",
                formTitle: "Naroƒçilo",
                labelName: "Ime",
                namePlaceholder: "Tvoje ime",
                labelPackage: "Izberite paket kosila",
                submitBtn: "Naroƒçi",
                packageOptions: ["Classic", "Vegetarijansko", "Vegansko"]
            }
        };

        function setLanguage(lang) {
            document.documentElement.lang = lang;
            document.getElementById('title').innerText = texts[lang].title;
            document.getElementById('subtitle').innerText = texts[lang].subtitle;
            document.getElementById('form-title').innerText = texts[lang].formTitle;
            document.getElementById('label-name').innerText = texts[lang].labelName;
            document.getElementById('name').placeholder = texts[lang].namePlaceholder;
            document.getElementById('label-package').innerText = texts[lang].labelPackage;

            const select = document.getElementById('package');
            select.innerHTML = '';
            texts[lang].packageOptions.forEach(option => {
                const opt = document.createElement('option');
                opt.value = option.toLowerCase();
                opt.textContent = option;
                select.appendChild(opt);
            });

            document.getElementById('submit-btn').innerText = texts[lang].submitBtn;
        }
    </script>
